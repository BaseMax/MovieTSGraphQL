generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  role     Role
  Comment  Comment[]
}

enum Role {
  user
  admin
  superadmin
}

model Artist {
  id          String        @id @default(uuid())
  name        String
  bio         String?
  dateOfBirth DateTime?
  avatar      String?
  movies      MovieArtist[]
}

model Movie {
  id                 String               @id @default(uuid())
  name               String
  plot               String?
  description        String?
  imdbScore          Float?
  imdbRef            String?
  duration           Float?
  releaseDate        DateTime?
  backdrop           String
  poster             String
  gallery            String[]
  genres             Genre[]
  artists            MovieArtist[]
  comments           Comment[]
  downloadableAssets DownloadableAssets[]
  languages          MovieLanguage[]
}

model MovieLanguage {
  tag     String
  for     LanguageRelation
  Movie   Movie            @relation(fields: [movieId], references: [id])
  movieId String

  @@id([movieId, for, tag])
}

enum LanguageRelation {
  original
  dub
  subtitle
}

model DownloadableAssets {
  Movie   Movie     @relation(fields: [movieId], references: [id])
  movieId String
  id      String    @id @default(cuid())
  link    String
  title   String
  type    AssetType
}

enum AssetType {
  subtitle
  sound
  video
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  createdAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  movie     Movie    @relation(fields: [movieId], references: [id])
  movieId   String
}

model Genre {
  id     String  @id @default(uuid())
  name   String  @unique
  movies Movie[]
}

model MovieArtist {
  movie        Movie        @relation(fields: [movieId], references: [id])
  movieId      String
  artist       Artist       @relation(fields: [artistId], references: [id])
  artistId     String
  contribution Contribution

  @@id([contribution, movieId, artistId])
}

enum Contribution {
  actor
  director
  writer
}
